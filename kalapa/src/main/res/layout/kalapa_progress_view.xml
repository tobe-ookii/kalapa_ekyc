<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/transparent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/progress_container"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/margin_horizontal"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/border_button_solid"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="@dimen/margin_xlarge">

        <ProgressBar
            android:id="@+id/progress_container_progressbar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:indeterminate="true"
            android:indeterminateTint="@color/main_color" />

        <vn.kalapa.ekyc.views.KLPGifImageView
            android:id="@+id/klp_gif_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/progress_container_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_vertical_large"
            android:text="@string/klp_alert_title"
            android:textColor="@color/main_color"
            android:textSize="@dimen/klp_txt_size_header"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/custom_dialog_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/klp_txt_size_normal"
            android:paddingHorizontal="@dimen/margin_horizontal_path"
            android:text="@string/klp_please_wait"
            android:textAlignment="center"
            android:textColor="@color/black80"
            android:textSize="@dimen/klp_txt_size_title" />


    </LinearLayout>

</FrameLayout>