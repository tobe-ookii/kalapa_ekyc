<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/border_card_solid"
        android:backgroundTint="@color/white"
        android:elevation="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_swipe_down"
            android:layout_width="wrap_content"
            android:layout_height="6dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_swipe_down" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_swipe_down"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:gravity="left"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_back_24"
                android:backgroundTint="@color/mainColor"
                android:cropToPadding="false"
                android:scaleType="fitXY"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/noteLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginEnd="30dp"
                android:gravity="center"
                android:text="/klp_title_front"
                android:textSize="@dimen/klp_txt_size_title"
                android:textStyle="normal|bold" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_guide_0"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:background="@color/klp_transparent"
            android:cropToPadding="false"
            android:paddingStart="16dp"
            android:scaleType="centerInside" />

        <!--        <TextView-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="30dp"-->
        <!--            android:layout_below="@id/iv_guide_icon"-->
        <!--            android:layout_centerHorizontal="true"-->
        <!--            android:layout_marginLeft="10dp"-->
        <!--            android:layout_marginTop="10dp"-->
        <!--            android:gravity="left"-->
        <!--            android:text="@string/klp_guide_title"-->
        <!--            android:textColor="@color/textColor"-->
        <!--            android:textSize="18sp"-->
        <!--            android:textStyle="normal|bold" />-->

        <TextView
            android:id="@+id/tv_note_0"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/iv_guide_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:gravity="left"
            android:text="klp_guide_title"
            android:textSize="@dimen/klp_txt_size_normal"
            android:textStyle="normal|bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginHorizontal="@dimen/margin_horizontal_path"
            android:gravity="left"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/ib_note_1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@drawable/done_ring"
                android:cropToPadding="false"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_note_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_guide_icon"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:text="klp_guide_passport_1"
                android:textSize="@dimen/klp_txt_size_normal" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginHorizontal="@dimen/margin_horizontal_path"
            android:gravity="left"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/ib_note_2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@drawable/done_ring"
                android:cropToPadding="false"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_note_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_guide_icon"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:text="klp_guide_passport_2"
                android:textSize="@dimen/klp_txt_size_normal" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginHorizontal="@dimen/margin_horizontal_path"
            android:gravity="left"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/ib_note_3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@drawable/done_ring"
                android:cropToPadding="false"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_note_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_guide_icon"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:text="klp_guide_passport_3"
                android:textSize="@dimen/klp_txt_size_normal" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginHorizontal="@dimen/margin_horizontal_path"
            android:gravity="left"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/ib_note_31"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@drawable/done_ring"
                android:cropToPadding="false"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_note_31"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_guide_icon"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:text="klp_guide_passport_4"
                android:textSize="@dimen/klp_txt_size_normal" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_note_4"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/iv_guide_icon"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="@dimen/klp_margin_mid"
            android:gravity="center|left"
            android:text="@string/klp_guide_reject_title"
            android:textSize="@dimen/klp_txt_size_normal"
            android:textStyle="normal|bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_horizontal"
            android:layout_marginBottom="@dimen/klp_margin_mid"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/klp_margin_xsmall"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/iv_guide_1"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:background="@color/klp_transparent"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/tv_note_5"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@id/iv_guide_icon"
                    android:gravity="center"
                    android:text="klp_guide_reject_1"
                    android:textSize="@dimen/klp_txt_size_description" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/klp_margin_xsmall"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/iv_guide_2"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:background="@color/klp_transparent"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/tv_note_6"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@id/iv_guide_icon"
                    android:gravity="center"
                    android:text="klp_guide_reject_2"
                    android:textSize="@dimen/klp_txt_size_description" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/iv_guide_3"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:background="@color/klp_transparent"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/tv_note_7"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@id/iv_guide_icon"
                    android:gravity="center"
                    android:text="klp_guide_reject_3"
                    android:textSize="@dimen/klp_txt_size_description" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="vertical">

            <Button
                android:id="@+id/nextButton"
                style="@style/BeTallSingleButtonStyle"
                android:layout_marginBottom="24dp"
                android:text="@string/klp_button_continue" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>