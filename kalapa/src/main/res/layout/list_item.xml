<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@drawable/border_button_only"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingVertical="@dimen/margin_xsmall">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_weight="4"
            android:textSize="@dimen/klp_txt_size_normal"
            android:maxLines="4"
            android:text="1231232132132 123213213 wwd1 12 123 213213 123123 213 123 123123 123 123 12 "
            android:textAlignment="textStart"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_weight="7"
            android:maxLines="4"
            android:textAlignment="textEnd"
            android:textSize="@dimen/klp_txt_size_normal"
            android:text="1231232132132 123213213 wwd1 12 123 213213 123123 213 123 123123 123 123 12 " />
    </LinearLayout>

    <View
        android:id="@+id/view_split"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="@dimen/margin_mid"
        android:background="@color/white40" />
</LinearLayout>