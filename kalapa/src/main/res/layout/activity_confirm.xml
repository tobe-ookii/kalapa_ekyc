<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/containerView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <include
        android:id="@+id/toolbar"
        layout="@layout/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

<!--    <include-->
<!--        android:id="@+id/progress_indicator"-->
<!--        layout="@layout/progress_indicator"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginTop="16dp" />-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_confirm_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_side"
                android:textAlignment="center"
                android:textStyle="bold"
                android:lines="2"
                android:text="@string/klp_subtitle_confirm"
                android:textColor="@color/textColor"
                android:textSize="@dimen/klp_txt_size_normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_vertical"
                android:background="@color/ekyc_grey"
                android:paddingHorizontal="@dimen/margin_horizontal"
                android:paddingVertical="@dimen/klp_txt_size_normal"
                android:text="@string/klp_personal_info"
                android:textSize="@dimen/klp_txt_size_normal"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical"
                android:paddingLeft="24dp"

                android:paddingRight="24dp">

                <TextView
                    android:id="@+id/tv_confirm_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="@string/klp_field_id_number"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/klp_txt_size_description" />

                <EditText
                    android:id="@+id/edIDNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edt_default_background"
                    android:digits="0123456789"
                    android:gravity="left|center"
                    android:inputType="number|textVisiblePassword"
                    android:textColor="@color/black"
                    android:textColorHint="#C4C4C6"
                    android:textSize="@dimen/klp_txt_size_normal"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical"
                android:paddingLeft="24dp"
                android:paddingRight="24dp">

                <TextView
                    android:id="@+id/tv_confirm_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:text="@string/klp_field_name"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/klp_txt_size_description" />

                <EditText
                    android:id="@+id/edName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edt_default_background"
                    android:ellipsize="end"
                    android:gravity="left|center"
                    android:inputType="text"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:textColor="@color/black"
                    android:textColorHint="#C4C4C6"
                    android:textSize="@dimen/klp_txt_size_normal"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/edDOB"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/margin_side"
                    android:paddingEnd="@dimen/margin_small">

                    <TextView
                        android:id="@+id/tv_confirm_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="@string/klp_field_dob"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/klp_txt_size_description" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/edDOBDay"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/edt_default_background"
                            android:editable="false"
                            android:gravity="left|center"
                            android:textColor="@color/black"
                            android:textColorHint="#C4C4C6"
                            android:textSize="@dimen/klp_txt_size_normal"
                            android:textStyle="bold" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:paddingStart="@dimen/margin_xsmall"
                    android:layout_marginEnd="@dimen/margin_side"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_confirm_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="@string/klp_field_gender"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/klp_txt_size_description" />


                    <RadioGroup
                        android:id="@+id/radioGroupSex"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|start"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radio_male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/radio_background"
                            android:paddingLeft="5dp"
                            android:text="@string/klp_field_male"
                            android:checked="true"
                            android:textSize="@dimen/klp_txt_size_normal"
                            android:buttonTint="@color/ekyc_red"
                            android:textStyle="bold" />

                        <RadioButton
                            android:id="@+id/radio_female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_xsmall"
                            android:button="@drawable/radio_background"
                            android:paddingLeft="5dp"
                            android:text="@string/klp_field_female"
                            android:textSize="@dimen/klp_txt_size_normal"
                            android:textStyle="bold" />

                    </RadioGroup>


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical"
                android:paddingLeft="24dp"
                android:paddingRight="24dp">

                <TextView
                    android:id="@+id/tv_confirm_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="@string/klp_field_hometown"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/klp_txt_size_description" />

                <EditText
                    android:id="@+id/edHometown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edt_default_background"
                    android:ellipsize="end"
                    android:gravity="left|center"
                    android:inputType="text"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:textColor="@color/black"
                    android:textColorHint="#C4C4C6"
                    android:textSize="@dimen/klp_txt_size_normal"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical"
                android:paddingLeft="24dp"
                android:paddingRight="24dp">

                <TextView
                    android:id="@+id/tv_confirm_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="@string/klp_field_address"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/klp_txt_size_description" />

                <EditText
                    android:id="@+id/edAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edt_default_background"
                    android:ellipsize="end"
                    android:gravity="left|center"
                    android:inputType="text"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:textColor="@color/black"
                    android:textColorHint="#C4C4C6"
                    android:textSize="@dimen/klp_txt_size_normal"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/edDOI"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/margin_side"
                    android:paddingEnd="@dimen/margin_small">

                    <TextView
                        android:id="@+id/tv_confirm_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="@string/klp_field_doi"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/klp_txt_size_description" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/edDOIDay"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/edt_default_background"
                            android:editable="false"
                            android:gravity="left|center"
                            android:textColor="@color/black"
                            android:textColorHint="#C4C4C6"
                            android:textSize="@dimen/klp_txt_size_normal"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/edDOE"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/margin_side"
                    android:paddingStart="@dimen/margin_xsmall"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_confirm_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="@string/klp_field_doe"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/klp_txt_size_description" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/edDOEDay"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/edt_default_background"
                            android:editable="false"
                            android:gravity="left|center"
                            android:textColor="@color/black"
                            android:textColorHint="#C4C4C6"
                            android:textSize="@dimen/klp_txt_size_normal"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical"

                android:paddingLeft="24dp"
                android:paddingRight="24dp">

                <TextView
                    android:id="@+id/tv_confirm_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="@string/klp_field_poi"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/klp_txt_size_description" />

                <EditText
                    android:id="@+id/edPlaceOfIssue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edt_default_background"
                    android:ellipsize="end"
                    android:gravity="left|center"
                    android:inputType="text"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:textColor="@color/black"
                    android:textColorHint="#C4C4C6"
                    android:textSize="@dimen/klp_txt_size_normal"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_confirm_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="@string/klp_field_qr"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/klp_txt_size_description" />

                <EditText
                    android:id="@+id/edQrCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edt_default_background"
                    android:ellipsize="end"
                    android:gravity="left|center"
                    android:inputType="text"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:textColor="@color/black"
                    android:textColorHint="#C4C4C6"
                    android:textSize="@dimen/klp_txt_size_normal"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnPersonalConfirm"
        style="@style/BeTallSingleButtonStyle"
        android:layout_marginBottom="30dp"
        android:background="@drawable/border_button_solid"
        android:text="@string/klp_btn_confirm"
        android:textAllCaps="false"
        android:textColor="@color/white" />
</LinearLayout>