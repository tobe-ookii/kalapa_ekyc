<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/iv_preview_image"
        android:layout_centerInParent="true">

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:context=".activity.CameraActivity" />
    </LinearLayout>


    <ImageView
        android:id="@+id/iv_preview_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/guide_id"
        android:translationY="@dimen/camera_offset_y"
        android:visibility="gone" />

    <vn.kalapa.ekyc.views.CardMaskView
        android:id="@+id/cardMaskView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:translationY="@dimen/camera_offset_selfie"
        app:dashColor="@color/colorWhite"
        app:liveness_mode="true"
        app:maskColor="@color/colorPrimary"
        app:radius="4dp"
        app:transOff="-5dp" />

    <include
        android:id="@+id/toolbar"
        layout="@layout/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/btn_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_from_button_holder"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_retry"
            style="@style/BeTallSingleButtonStyle"
            android:layout_marginVertical="@dimen/klp_margin_mid"
            android:background="@drawable/border_button_only"
            android:backgroundTint="@color/betall_inactive_button"
            android:text="@string/klp_retry_btn"
            android:textColor="@color/betall_inactive_button"
            android:textSize="@dimen/klp_shinhan_title_17" />

        <Button
            android:id="@+id/btn_next"
            style="@style/BeTallSingleButtonStyle"
            android:background="@drawable/border_button_solid"
            android:backgroundTint="@color/main_color"
            android:text="@string/klp_next_btn"
            android:textColor="@color/white"
            android:textSize="@dimen/klp_shinhan_title_17"
            android:textStyle="bold" />

    </LinearLayout>

<!--    <ImageView-->
<!--        android:id="@+id/iv_test_image"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="250dp"-->
<!--        android:layout_alignParentBottom="true"-->
<!--        android:layout_marginBottom="@dimen/margin_mid" />-->

    <LinearLayout
        android:id="@+id/holder_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_holder"
        android:layout_marginHorizontal="@dimen/margin_horizontal"
        android:layout_marginTop="@dimen/klp_margin_small"
        android:orientation="vertical">

        <vn.kalapa.ekyc.views.KLPGifImageView
            android:id="@+id/iv_error"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/klp_margin_xsmall"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="2"
            android:text="SAMPLE_ERROR"
            android:textColor="@color/ekyc_red"
            android:textSize="@dimen/klp_shinhan_text_15" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/holder_auto_capture"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_above="@id/tv_instruction"
        android:layout_marginBottom="@dimen/margin_xxsmall"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/toggle_auto_capture"
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:src="@drawable/klp_ic_toggle_on" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_xxsmall"
            android:gravity="center"
            android:textSize="@dimen/klp_txt_size_description" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginHorizontal="@dimen/margin_horizontal_path"
        android:layout_marginTop="@dimen/margin_xxsmall"
        android:layout_marginBottom="@dimen/klp_margin_xsmall"
        android:maxLines="3"
        android:text="@string/klp_liveness_guide_title"
        android:textAlignment="center"
        android:textSize="@dimen/klp_shinhan_title_22"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/holder_error"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="@dimen/margin_horizontal"
        android:layout_marginBottom="@dimen/margin_xxsmall"
        android:background="@drawable/border_button_solid"
        android:backgroundTint="@color/progress_unchecked"
        android:maxLines="2"
        android:text="@string/klp_liveness_guide_title"
        android:textColor="#1A94FF"
        android:textSize="@dimen/klp_txt_size_normal"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/holder_capture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/capture_from_button_holder"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="invisible">

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/btn_capture"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/camera_vector" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_refocus"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_focus"
                android:text="@string/klp_liveness_guide_title"
                android:textAllCaps="false"
                android:visibility="invisible" />

        </LinearLayout>
    </LinearLayout>

    <!--    <FrameLayout-->
    <!--        android:id="@+id/fragment_container"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent"-->
    <!--        android:layout_alignParentBottom="true" />-->

</RelativeLayout>