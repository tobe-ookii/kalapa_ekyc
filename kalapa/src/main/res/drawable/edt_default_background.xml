<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">

            <solid android:color="@color/klp_border_grey" />

            <padding
                android:bottom="@dimen/klp_margin_small"
                android:left="@dimen/klp_margin_small"
                android:right="@dimen/klp_margin_small"
                android:top="@dimen/klp_margin_small" />
            <corners
                android:bottomLeftRadius="@dimen/klp_margin_xsmall"
                android:bottomRightRadius="@dimen/klp_margin_xsmall"
                android:topLeftRadius="@dimen/klp_margin_xsmall"
                android:topRightRadius="@dimen/klp_margin_xsmall" />
        </shape>
    </item>

</layer-list>