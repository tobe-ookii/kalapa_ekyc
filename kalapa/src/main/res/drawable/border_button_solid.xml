<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape android:shape="rectangle" >
            <stroke
                android:width="0dp"
                android:color="@color/ekyc_grey" />

            <solid android:color="@color/main_color" />

            <padding android:left="@dimen/klp_margin_xsmall"
                android:right="@dimen/klp_margin_xsmall"
                android:top="@dimen/klp_margin_xsmall"
                android:bottom="@dimen/klp_margin_xsmall" />
            <corners
                android:topRightRadius="@dimen/klp_margin_xsmall"
                android:topLeftRadius="@dimen/klp_margin_xsmall"
                android:bottomRightRadius="@dimen/klp_margin_xsmall"
                android:bottomLeftRadius="@dimen/klp_margin_xsmall"
                />
        </shape>
    </item>
</layer-list>