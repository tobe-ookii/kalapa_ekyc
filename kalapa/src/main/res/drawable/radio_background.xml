<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:drawable="@drawable/ic_step_checked" android:padding="5dp" android:state_checked="true">
        <padding
            android:left="5dp"
            android:top="5dp"
            android:right="5dp"
            android:bottom="5dp" />
    </item>
    <item android:drawable="@drawable/ic_step_unchecked" android:padding="5dp" android:state_checked="false">
        <padding
            android:left="5dp"
            android:top="5dp"
            android:right="5dp"
            android:bottom="5dp" />
    </item>
</selector>