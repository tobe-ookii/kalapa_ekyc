<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/main_color" />

            <solid android:color="#00FFFFFF" />

            <padding
                android:bottom="@dimen/margin_xxsmall"
                android:left="@dimen/margin_xxsmall"
                android:right="@dimen/margin_xxsmall"
                android:top="@dimen/margin_xxsmall" />

            <corners
                android:bottomLeftRadius="@dimen/klp_margin_xsmall"
                android:bottomRightRadius="@dimen/klp_margin_xsmall"
                android:topLeftRadius="@dimen/klp_margin_xsmall"
                android:topRightRadius="@dimen/klp_margin_xsmall"/>
        </shape>
    </item>

</layer-list>