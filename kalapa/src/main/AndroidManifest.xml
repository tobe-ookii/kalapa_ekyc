            android:exported="false"
            android:resizeableActivity="true"

            android:screenOrientation="portrait" />
        <activity
            android:name=".ekyc.activity.MRZScannerActivity"
            android:exported="false"
            android:resizeableActivity="true"

            android:screenOrientation="portrait" />
        <activity
            android:name=".ekyc.activity.PassportActivity"
            android:exported="false"
            android:resizeableActivity="true"

            android:screenOrientation="portrait" />
        <activity
            android:name="vn.kalapa.ekyc.nfcsdk.activities.NFCActivity"
            android:exported="false"
            android:resizeableActivity="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ekyc.activity.CameraXSelfieActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ekyc.capturesdk.CameraXPassportActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ekyc.capturesdk.CameraXMRZActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ekyc.capturesdk.CameraXCaptureActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ekyc.capturesdk.CameraXCaptureBackActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ekyc.activity.ConfirmActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false"
            android:screenOrientation="portrait" />
    </application>

</manifest>