<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />


    </LinearLayout>

    <ScrollView
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_48"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="@dimen/size_120"
                android:layout_height="@dimen/size_120"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/size_31"
                android:fontFamily="@font/roboto"
                android:src="@drawable/logo_fis" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/size_48"
                android:layout_marginTop="@dimen/size_50"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_31"
                    android:layout_weight="2"
                    android:paddingEnd="@dimen/size_4"
                    android:text="@string/cmnd_cccd"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/cmnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_10"
                    android:layout_marginEnd="@dimen/size_31"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:paddingStart="@dimen/size_9"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/size_48"
                android:layout_marginTop="@dimen/size_10"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_31"
                    android:layout_weight="2"
                    android:paddingEnd="@dimen/size_4"
                    android:text="@string/full_name"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/Hovaten"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_10"
                    android:layout_marginEnd="@dimen/size_31"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:paddingStart="@dimen/size_9"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/size_48"
                android:layout_marginTop="@dimen/size_10"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_31"
                    android:layout_weight="2"
                    android:paddingEnd="@dimen/size_4"
                    android:text="@string/birthday"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/ngaySinh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_10"
                    android:layout_marginEnd="@dimen/size_31"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:paddingStart="@dimen/size_9"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/size_48"
                android:layout_marginTop="@dimen/size_10"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_31"
                    android:layout_weight="2"
                    android:paddingEnd="@dimen/size_4"
                    android:text="@string/sex"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/GioiTinh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_10"
                    android:layout_marginEnd="@dimen/size_31"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:paddingStart="@dimen/size_9"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/size_48"
                android:layout_marginTop="@dimen/size_10"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_31"
                    android:layout_weight="2"
                    android:paddingEnd="@dimen/size_4"
                    android:text="@string/nationality"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/QuocTich"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_10"
                    android:layout_marginEnd="@dimen/size_31"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:paddingStart="@dimen/size_9"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/size_48"
                android:layout_marginTop="@dimen/size_10"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_31"
                    android:layout_weight="2"
                    android:paddingEnd="@dimen/size_4"
                    android:text="@string/native_land"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/Quequan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_10"
                    android:layout_marginEnd="@dimen/size_31"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:paddingStart="@dimen/size_9"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/size_48"
                android:layout_marginTop="@dimen/size_10"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_31"
                    android:layout_weight="2"
                    android:paddingEnd="@dimen/size_4"
                    android:text="@string/plan_of_residence"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/noiThuongtru"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_10"
                    android:layout_marginEnd="@dimen/size_31"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:paddingStart="@dimen/size_9"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/size_48"
                android:layout_marginTop="@dimen/size_10"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_31"
                    android:layout_weight="2"
                    android:paddingEnd="@dimen/size_4"
                    android:text="@string/co_gia_tri_den"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/giaTriDen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/size_10"
                    android:layout_marginEnd="@dimen/size_31"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:paddingStart="@dimen/size_9"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/size_48"
                android:layout_marginTop="@dimen/size_10"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_31"
                    android:layout_weight="2"
                    android:paddingEnd="@dimen/size_4"
                    android:text="@string/dac_diem_nhan_dang"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/ddNhanDang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_10"
                    android:layout_marginEnd="@dimen/size_31"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:paddingStart="@dimen/size_9"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/size_48"
                android:layout_marginTop="@dimen/size_10"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_31"
                    android:layout_weight="2"
                    android:paddingEnd="@dimen/size_4"
                    android:text="@string/date_range"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/ngayCap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/size_48"
                    android:layout_marginStart="@dimen/size_10"
                    android:layout_marginEnd="@dimen/size_31"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:paddingStart="@dimen/size_9"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/size_48"
                android:layout_marginTop="@dimen/size_10"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_31"
                    android:layout_weight="2"
                    android:paddingEnd="@dimen/size_4"
                    android:text="@string/issued_by"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/NoiCap"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/size_10"
                    android:layout_marginEnd="@dimen/size_31"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:paddingStart="@dimen/size_9"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <TextView
                android:id="@+id/btnSubmit"
                android:layout_width="@dimen/dp_130"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/size_20"
                android:layout_marginBottom="@dimen/size_31"
                android:background="@drawable/custom_btn_color_radius_20px_grey"
                android:fontFamily="@font/roboto"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:textSize="@dimen/sp_16"
                android:text="Đồng ý"
                android:visibility="visible"
                android:textColor="@color/primaryColor" />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>